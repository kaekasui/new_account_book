%ul.list-group
  %li.list-group-item{'ng-mouseenter': 'menu.mouseEnter(1)', 'ng-mouseleave': 'menu.mouseLeave()'}
    %a{'ui-sref': 'login'}
      %span.glyphicon{'class': 'glyphicon-leaf'}
      {{ 'TITLES.LOGIN' | translate }}
    %span{'ng-show': 'menu.isSelected(1)'}
      %img.pull-right{'ng-src': '{{menu.menu_image}}'}
  %li.list-group-item{'ng-mouseenter': 'menu.mouseEnter(2)', 'ng-mouseleave': 'menu.mouseLeave()'}
    %a{'ui-sref': 'sign_up'}
      %span.glyphicon{'class': 'glyphicon-heart'}
      {{ 'TITLES.SIGN_UP' | translate }}
    %span{'ng-show': 'menu.isSelected(2)'}
      %img.pull-right{'ng-src': '{{menu.menu_image}}'}
  %li.list-group-item{'ng-mouseenter': 'menu.mouseEnter(3)', 'ng-mouseleave': 'menu.mouseLeave()'}
    %a{'ui-sref': 'reset_password'}
      %span.glyphicon{'class': 'glyphicon-leaf'}
      {{ 'TITLES.RESET_PASSWORD' | translate }}
    %span{'ng-show': 'menu.isSelected(3)'}
      %img.pull-right{'ng-src': '{{menu.menu_image}}'}
  %li.list-group-item{'ng-mouseenter': 'menu.mouseEnter(4)', 'ng-mouseleave': 'menu.mouseLeave()'}
    %a{'ui-sref': 'resend_email'}
      %span.glyphicon{'class': 'glyphicon-heart'}
      {{ 'TITLES.RESEND_EMAIL' | translate }}
    %span{'ng-show': 'menu.isSelected(4)'}
      %img.pull-right{'ng-src': '{{menu.menu_image}}'}
