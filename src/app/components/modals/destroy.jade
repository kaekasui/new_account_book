.modal-header
  form.form(name='destroyForm' ng-submit='confirm_destroy.submit()')
    submit-button-directive(form='destroyForm')
      span.glyphicon.glyphicon-fire#left-icon
      span {{ 'BUTTONS.YES' | translate }}
    a.btn.btn-default.pull-right(ng-click='confirm_destroy.cancel()')
      span.glyphicon.glyphicon-remove#left-icon
      span {{ 'BUTTONS.CLOSE' | translate }}

.modal-body
  p(translate='MESSAGES.DELETE')
