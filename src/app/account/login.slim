.col-md-3
  account-menu-directive

.col-md-9
  .panel.panel-default
    .panel-heading
      span.glyphicon.glyphicon-leaf
      span translate="TITLES.LOGIN" 
    #with-background.panel-body
      .alert.alert-danger ng-show="login.errors" role="alert" 
        button.close data-dismiss="alert" ng-click="login.clearErrors()" type="button"  Ã—
        ul ng-repeat=("error in login.errors") 
          li  {error} 
      form name="loginForm" ng-submit="login.submit()" novalidate="novalidate" 
        .form-group
          label for="email" 
          span translate="LABELS.EMAIL" 
          span *
          input#email.form-control autofocus="autofocus" name="email" ng-maxlength="100" ng-model="login.email" required="required" type="email" /
          span.errors ng-messages="loginForm.email.$error" ng-show="loginForm.$submitted" 
            div ng-message="required" 
              span.glyphicon.glyphicon-alert
              span translate="ERRORS.REQUIRED.EMAIL" 
            div ng-message="email" 
              span.glyphicon.glyphicon-alert
              span translate="ERRORS.EMAIL" 
            div ng-message="maxlength" 
              span.glyphicon.glyphicon-alert
              span translate="ERRORS.MAXLENGTH.EMAIL" 
        .form-group
          label for="password" 
            span translate="LABELS.PASSWORD" 
            span *
          input#password.form-control name="password" ng-maxlength="72" ng-minlength="4" ng-model="login.password" required="required" type="password" /
          span.errors ng-messages="loginForm.password.$error" ng-show="loginForm.$submitted" 
            div ng-message="required" 
              span.glyphicon.glyphicon-alert
              span translate="ERRORS.REQUIRED.PASSWORD" 
            div ng-message="maxlength" 
              span.glyphicon.glyphicon-alert
              span translate="ERRORS.MAXLENGTH.PASSWORD" 
            div ng-message="minlength" 
              span.glyphicon.glyphicon-alert
              span translate="ERRORS.MINLENGTH.PASSWORD" 
        button.btn.btn-primary ng-disabled=("loginForm.$submitted && loginForm.$invalid") type="submit" 
          span translate="BUTTONS.LOGIN" 
      hr/
      p
        a ui-sref="reset_password" 
          span translate="LINKS.FORGOT_PASSWORD" 
      p
        a ui-sref="resend_email" 
          span translate="LINKS.RESEND_EMAIL" 
