form.form-inline(novalidate=true name='setColorForm' ng-submit='color_code.submit()')
  .modal-header
    button.btn.btn-info(translate='BUTTONS.SET')
    a.btn.btn-default(ng-click='color_code.new_color_code = color_code.tag.color_code')
      span {{ 'BUTTONS.CLEAR' | translate }}
    a.btn.btn-default.pull-right(ng-click='color_code.cancel()')
      span.glyphicon.glyphicon-remove#left-icon
      span {{ 'BUTTONS.CLOSE' | translate }}
  .modal-body
    p
      span.glyphicon.glyphicon-bookmark#left-icon(ng-if='color_code.tag.color_code'
                                                  ng-style="{color:color_code.tag.color_code}")
      span {{ color_code.tag.name }}
    p
      color-picker(ng-model='color_code.new_color_code' color-picker-format='hex')
